<%= form_with model: @user, url: "users/:id/edit", method: :post do |form| %>

  <%= form.label :username, "User name" %>
  <%= form.text_field :username, placeholder: "Try something cool?" %>

  <%= form.label :email, "E-mail" %>
  <%= form.email_field :email %>

  <%= form.label :password, "Password" %>
  <%= form.password_field :password %>

  <%= form.submit "Submit" %>
<% end %>
  
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "user") %> prohibited this user from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>